<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/tvMainNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Michell"
            android:textSize="20sp"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvMainApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ramirez"
            android:textSize="20sp"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvMainTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="999999999"
            android:textSize="20sp"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvMainDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los malditos de Bayovar"
            android:textSize="20sp"
            android:ellipsize="end"/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:alpha="0.3"
        android:background="#000"/>

    <TextView
        android:id="@+id/tvMainEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="22"
        android:padding="8dp"/>

</LinearLayout>